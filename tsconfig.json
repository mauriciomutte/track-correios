{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node",
		"strict": true,
		"outDir": "./dist",
		"typeRoots": [
			"node_modules/@types",
			"src/@types"
		],
		"baseUrl": "."
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}

{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"removeComments": true,
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node",
		"strict": true,
		"outDir": "./dist",
		"typeRoots": ["node_modules/@types", "src/@types"],
		"baseUrl": "."
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
